        {% endjavascripts %}
        {% javascripts '@PGSPublicBundle/Resources/public/plugins/jquery.cokie.min.js' filter='?yui_js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% javascripts '@PGSPublicBundle/Resources/public/plugins/uniform/jquery.uniform.min.js' filter='?yui_js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <!-- END GLOBAL SCRIPTS -->
    {% endblock scriptglobal %}

    {% block scriptpage %} {% endblock scriptpage %}

    {% block scriptcurrent %} {% endblock scriptcurrent %}
    <!-- END JAVASCRIPTS -->
{% endblock javascripts %}
    </body>
{% endblock body %}


