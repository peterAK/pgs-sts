{% extends 'PGSAdminBundle::base.html.twig' %}

{% block title %}<title>ClassGizmo | {{ model is defined ? model|title : 'Administration' }} Form</title>{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h3 class="page-title">{% block pagetitle %}{{ model|title }}{% endblock pagetitle %}</h3>
            {% block breadcrumb %}{% endblock breadcrumb %}
        </div>
    </div>
    <div class="row profile">
        <div class="col-md-12">
            <div class="tabbable tabbable-custom tabbable-full-width">
                {% block tabnav %}{% endblock tabnav %}
                {% block tabcontent %}{% endblock tabcontent %}
            </div>
        </div>
    </div>
{% endblock content %}

{% block scriptcurrent %}
    {{ parent() }}
    <script type="text/javascript">
        $('.date').datepicker({ dateFormat: 'dd-mm-yy' })
    </script>
{% endblock scriptcurrent %}
