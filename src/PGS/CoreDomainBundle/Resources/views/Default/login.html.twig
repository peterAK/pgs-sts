<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<!--[if IE 8]>
<html class="lt-ie9" xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"><![endif]-->
<!--[if gt IE 8]><!-->
<html xmlns="http://www.w3.org/1999/xhtml"><!--<![endif]-->
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Protouch Global Solutions | {% block title %} Welcome {% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}
    {% block javascripts %}
    {% endblock %}
</head>
<style>
    body {
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        color: #999999;
        letter-spacing: 1px;
    }

    .center {
        float: none;
        margin-left: auto;
        margin-right: auto;
    }

    .form-group {
        width: 100%;
    }

    .form-control {
        width: 75%;
    }

</style>
<body>
<div id="wrapper">
    {% block content %}
        {% if error %}
            <div>
                {{ error.message }}
            </div>
        {% endif %}
        <div class='row'>
            <div class="col-lg-4 center" style="margin-top:10%;">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bell fa-fw"></i>
                        User Login
                    </div>
                    <form action="{{ path('login_check') }}" method="post" class="form-signin">
                        <div class='form-group'>
                            <label for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="_username"
                                   placeholder="Username" autofocus="" value="{{ last_username }}">
                        </div>
                        <div class='form-group'>
                            <label for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="_password"
                                   placeholder="Password">
                        </div>
                        <button class="btn btn-default pull-right" type="submit">Login</button>
                        <div class="clear"></div>
                        &nbsp;<br/>&nbsp;<br/>
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}
</div>
</body>
</html>
