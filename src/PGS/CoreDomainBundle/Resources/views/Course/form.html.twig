{% extends 'PGSAdminBundle::view.html.twig' %}
{% form_theme form 'PGSAdminBundle:Form:form.html.twig' %}

{% block pagetitle %}course Maintenance{% endblock pagetitle %}

{% block breadcrumb %}
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">
                <i class="fa fa-home"></i>
            </a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="{{ url('pgs_core_course_list') }}">
                {{ model|capitalize }}
            </a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            {{ title|capitalize }}
        </li>
    </ul>
{% endblock breadcrumb %}

{% block tabcontent %}
    <div class="row">
        <div class="col-md-5">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class ="caption">
                        {% if course.id %}Edit{% else %}New{% endif %} {{ model }}
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="" method="post" {{ form_enctype(form) }}>
                        <div class="form-body">

                            {{ form_widget(form) }}
                        </div>

                        <div class="form-actions fluid">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn blue" type="submit">Save</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="tile double triple-down selected bg-blue">
                <div class="corner">
                </div>
                <div class="check">
                </div>
                <div class="tile-body">
                    <h4>About course</h4>
                    <p>
                        course settings
                    </p>
                    <p>
                        information about this page
                    </p>
                </div>
                <div class="tile-object">
                    <div class="name">
                        <i class="fa fa-life-bouy"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock tabcontent %}

{% block scriptcurrent %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#course_country').bind('change', null,function () {
                $.ajax({
                    'url': '{{ url('pgs_core_cascade_state_by_country') }}/' + $(this).val(),
                    'beforeSend': function () {
                        $('#course_state option:gt(0)').remove();
                    },
                    'success': function (result) {
                        $('#course_state').append(result);
                    }
                });
            }).change();
        });
    </script>
{% endblock scriptcurrent %}
