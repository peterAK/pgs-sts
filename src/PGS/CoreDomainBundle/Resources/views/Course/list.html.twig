{% extends 'PGSAdminBundle::list.html.twig' %}

{% block breadcrumb %}
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="/">
            <i class="fa fa-home"></i>
        </a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="{{ url('pgs_core_course_list') }}">
            {{ model|title }}
        </a>
    </li>
</ul>
{% endblock breadcrumb %}

{% block list %}
    <div class="col-md-2">
        <ul class="status-nav margin-bottom-10">
            <li class="compose-btn">
                <a href="{{ url('pgs_core_course_new') }}" data-title="Compose" class="btn green">
                    <i class="fa fa-edit"></i> Add {{ model }}
                </a>
            </li>
            <li class="all active-tab">
                <a class="btn" data-title="all" href="javascript:;" >
                    All
                </a>
                <b></b>
            </li>
        </ul>
    </div>
    <div class="col-md-10">
        <div class="status-header">
            <h1 class="pull-left">{{ model|title }} : All</h1>
        </div>
        <div class="status-content">
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th><i class="fa fa-cog"></i></th>
                    </tr>
                </thead>
                <tbody>
                    {% for course in courses %}
                        <tr>
                            <td>
                                <a href="{{ path('pgs_core_course_view', { 'id': course.id }) }}">
                                    {{ course.id }}
                                </a>
                            </td>
                            <td>{{ course.code }}</td>
                            <td>{{ course.name|capitalize}}</td>
                            <td>{{ course.description|capitalize }}</td>
                            <td>
                                <a href="{{ path('pgs_core_course_edit', { 'id': course.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a href="{{ path('pgs_core_course_delete', { 'id': course.id }) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock list %}

{% block scriptcurrent %}
    {{ parent() }}

    {#{%  set url = url('pgs_admin_ajax_course_status') %}#}
    {#{% include("PGSAdminBundle:Widget:status.html.twig") with {'url': url('pgs_admin_ajax_course_status') } %}#}

{% endblock scriptcurrent %}
