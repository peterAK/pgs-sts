<ul class="blog-info">
    {% for studentCondition in studentConditions %}
        <li style="display: inline;">
            {#<span class="color-green">{{ studentMedical.medical.style|raw }}</span>#}
            {% if app.request.locale == 'en' %}
                {{ studentCondition.medical.name|capitalize }}
            {% else %}
                {{ studentCondition.medical.translation('id_ID').name|capitalize }}
            {% endif %}
        </li>
    {% endfor %}
</ul>
