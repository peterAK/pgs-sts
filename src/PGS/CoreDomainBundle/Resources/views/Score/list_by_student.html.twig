        <li>
            <a href="/">
                <i class="fa fa-home"></i>
            </a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            {#<a href="{{ url('pgs_core_school_class_student_list') }}">#}
                {#{{ model|title }}#}
            {#</a>#}
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            {#{% if schoolClassStudents.id %}Edit{% else %}New{% endif %} {{ model }}#}
        </li>
    </ul>
{% endblock breadcrumb %}

{% block list %}
    {#<div class="col-md-2">#}
        {#<ul class="status-nav margin-bottom-10">#}
            {#<li class="compose-btn">#}
                {#<a href="{{ url('pgs_core_score_select_by_class') }}" data-title="Compose" class="btn green">#}
                    {#<i class="fa fa-edit"></i> Add {{ model }}#}
                {#</a>#}
            {#</li>#}
        {#</ul>#}
        {#{{ render(controller('PGSCoreDomainBundle:Help:fetch', { 'key':'score.list'})) }}#}
    {#</div>#}
    <div class="col-md-5">
        <div class="status-header">
            <h1 class="pull-left">{{ model|title }} : All</h1>
        </div>
        <div class="status-content">
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                <tr>
                    {#<th>Student </th>#}
                    <th>Students </th>
                    <th>School Class </th>
                    <th>Course </th>
                    <th style="text-align: center;"><i class="fa fa-cog"></i></th>
                </tr>
                </thead>
                <tbody>
                {% for schoolClassStudent in schoolClassStudents %}
                    <tr>
                        {#<td>#}
                            {#<img width="20px" height="20px" src="/uploads/application/#}
                                {#{{ schoolClassStudent.student.application.id }}/{{ schoolClassStudent.student.picture }}">#}
                        {#</td>#}
                        <td>{{ schoolClassStudent.student.firstName|capitalize }} {{ schoolClassStudent.student.lastName|capitalize }}</td>
                        <td>{{ schoolClassStudent.schoolClass.name|capitalize }}</td>
                        <td>{{ schoolClassCourse.name|capitalize }}</td>
                        <td>
                            <a href="{{ path('pgs_core_score_new', { 'schoolClassStudent': schoolClassStudent.id, 'schoolClassCourse': schoolClassCourse.id, 'student': schoolClassStudent.student.id  }) }}">
                                  <button class="btn blue" type="button">Give Score</button>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="form-actions fluid">
                <div class="col-md-offset-3 col-md-9">
                    <a href="{{ path('pgs_core_score_list')}}">
                        <button class="btn blue" type="button">View Score</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock list %}
