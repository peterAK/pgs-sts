{% extends 'PGSAdminBundle::list.html.twig' %}

{% block breadcrumb %}
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="/">
                <i class="fa fa-home"></i>
            </a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="{{ url('pgs_core_school_grade_level_list') }}">
                {{ model|title }}
            </a>
        </li>
    </ul>
{% endblock breadcrumb %}

{% block list %}
    <div class="col-md-2">
        <ul class="status-nav margin-bottom-10">
            <li class="compose-btn">
                <a href="{{ url('pgs_core_school_grade_level_new') }}" data-title="Compose" class="btn green">
                    <i class="fa fa-edit"></i> Add {{ model }}
                </a>
            </li>
            <li class="all active-tab">
                <a class="btn" data-title="all" href="javascript:;" >
                    All
                </a>
                <b></b>
            </li>
        </ul>
        {{ render(controller('PGSCoreDomainBundle:Help:fetch', { 'key':'school_grade_level.list'})) }}
    </div>
    <div class="col-md-10">
        <div class="status-header">
            <h1 class="pull-left">{{ model|title }} : All</h1>
        </div>
        <div class="status-content">
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>School </th>
                    <th>Grade level <?thn/>
                    <th><i class="fa fa-wrench"></i></th>
                    <th><i class="fa fa-cog"></i></th>
                </tr>
                </thead>
                <tbody>
                {% for schoolGradeLevel in schoolGradeLevels %}
                    <tr>
                        <td>
                            <a href="{{ path('pgs_core_school_grade_level_view', { 'id': schoolGradeLevel.id }) }}">
                                {{ schoolGradeLevel.id }}
                            </a>
                        </td>
                        <td>{{ schoolGradeLevel.school.name }}</td>
                        <td>{{ schoolGradeLevel.gradeLevel.level.name }}&nbsp {{ schoolGradeLevel.gradeLevel.grade.name }} </td>
                        <td class="nowrap">
                            <a href="{{ path('pgs_core_school_grade_level_move', { 'id': schoolGradeLevel.id, 'direction': 'top' }) }}">
                                <i class="fa fa-angle-double-up"></i>
                            </a>
                            <a href="{{ path('pgs_core_school_grade_level_move', { 'id': schoolGradeLevel.id, 'direction': 'up' }) }}">
                                <i class="fa fa-angle-up"></i>
                            </a>
                            <a href="{{ path('pgs_core_school_grade_level_move', { 'id': schoolGradeLevel.id, 'direction': 'down' }) }}">
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <a href="{{ path('pgs_core_school_grade_level_move', { 'id': schoolGradeLevel.id, 'direction': 'bottom' }) }}">
                                <i class="fa fa-angle-double-down"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('pgs_core_school_grade_level_edit', { 'id': schoolGradeLevel.id }) }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="{{ path('pgs_core_school_grade_level_delete', { 'id': schoolGradeLevel.id }) }}">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock list %}

