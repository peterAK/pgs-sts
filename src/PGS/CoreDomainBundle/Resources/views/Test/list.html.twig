{% extends 'PGSAdminBundle::list.html.twig' %}

{% block breadcrumb %}
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="/">
            <i class="fa fa-home"></i>
        </a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="{{ url('pgs_core_test_list') }}">
            {{ model|title }}
        </a>
    </li>
</ul>
{% endblock breadcrumb %}

{% block list %}
    <div class="col-md-2">
        <ul class="status-nav margin-bottom-10">
            <li class="compose-btn">
                <a href="{{ url('pgs_core_test_new') }}" data-title="Compose" class="btn green">
                    <i class="fa fa-edit"></i> Add {{ model }}
                </a>
            </li>
            <li class="all active-tab">
                <a class="btn" data-title="all" href="javascript:;" >
                    All
                </a>
                <b></b>
            </li>
            {% for status in statuses %}
                <li class="{{ status }}">
                    <a class="btn" href="javascript:;" data-title="{{ status }}">{{ status|capitalize }}</a>
                </li>
            {%  endfor %}
        </ul>
        </ul>
        {{ render(controller('PGSCoreDomainBundle:Help:fetch', { 'key':'test.list'})) }}
    </div>
    <div class="col-md-10">
        <div class="status-header">
            <h1 class="pull-left">{{ model|title  }} : All</h1>
        </div>
        <div class="status-content">
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Author</th>
                        <th><i class="fa fa-cog"></i></th>
                    </tr>
                </thead>
                <tbody>
                    {% for test in tests %}
                        <tr>
                            <td>
                                <a href="{{ path('pgs_core_test_view', { 'id': test.id }) }}">
                                    {{ test.id }}
                                </a>
                            </td>
                            <td>{{ test.name|title }}</td>
                            <td>{{ test.description|capitalize }}</td>
                            <td>{{ test.status|capitalize }}</td>
                            <td>{{ test.user|capitalize }}</td>                            <td>
                                <a href="{{ path('pgs_core_test_edit', { 'id': test.id }) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a href="{{ path('pgs_core_test_delete', { 'id': test.id }) }}">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock list %}

{% block scriptcurrent %}
    {{ parent() }}

    {% set url = url('pgs_core_test_by_status') %}
    {% include("PGSAdminBundle:Widget:status.html.twig") with {'url': url('pgs_core_test_by_status') } %}

{% endblock scriptcurrent %}
