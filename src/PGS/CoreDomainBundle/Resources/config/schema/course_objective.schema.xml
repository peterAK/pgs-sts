<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.CourseObjective" namespace="PGS\CoreDomainBundle\Model\CourseObjective">
    <table name="course_objective" phpName="CourseObjective">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="course_id" type="INTEGER" required="true"/>
        <column name="code" type="VARCHAR" size="15" required="true" />
        <column name="name" type="VARCHAR" size="100" required="true" />
        <column name="description" type="LONGVARCHAR" required="false" />

        <!-- Relations -->
        <foreign-key foreignTable="course" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="course_id" foreign="id"/>
        </foreign-key>

        <!-- Behavior-->
        <behavior name="sortable" />
    </table>
</database>
