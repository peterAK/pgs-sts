<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Score" namespace="PGS\CoreDomainBundle\Model\Score">
    <table name="score" phpName="Score">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="homework" type="DECIMAL" required="true" />
        <column name="daily_exam" type="DECIMAL" required="true" />
        <column name="mid_exam" type="DECIMAL" required="true" />
        <column name="final_exam" type="DECIMAL" required="true" />
        <!--<column name="point" type="DECIMAL" required="true" />-->
        <!--<column name="type" type="ENUM" valueSet=" homework, daily exam, mid exam, final exam, other" defaultValue="homework"/>-->
        <!--<column name="wave" type="ENUM" valueSet=" incomplete, complete, decline" defaultValue="complete"/>-->
        <column name="school_class_student_id" type="INTEGER" required="true"/>
        <column name="school_class_course_id" type="INTEGER" required="true"/>
        <column name="student_id" type="INTEGER" required="true"/>



        <!-- Relations -->
        <foreign-key foreignTable="school_class_student" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_class_student_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="school_class_course" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_class_course_id" foreign="id"/>
        </foreign-key>
        <!--<foreign-key foreignTable="student" onDelete="CASCADE" onUpdate="CASCADE">-->
            <!--<reference local="student_id" foreign="id"/>-->
        <!--</foreign-key>-->


    </table>
</database>
