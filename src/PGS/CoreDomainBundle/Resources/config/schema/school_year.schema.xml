<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.SchoolYear" namespace="PGS\CoreDomainBundle\Model\SchoolYear">
    <table name="school_year" phpName="SchoolYear">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="academic_year_id" type="INTEGER" required="true"/>
        <column name="school_id" type="INTEGER" required="true"/>
        <column name="date_start" type="DATE" />
        <column name="date_end" type="DATE" />
        <column name="description" type="LONGVARCHAR" required="true"/>
        <column name="active" type="boolean" defaultValue="false" />

        <!-- Relations -->
        <foreign-key foreignTable="academic_year" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="academic_year_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="school" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_id" foreign="id"/>
        </foreign-key>

        <!-- Behavior-->
        <behavior name="sortable">
            <parameter name="use_scope" value="true"/>
            <parameter name="scope_column" value="school_id"/>
        </behavior>
        <behavior name="i18n">
            <parameter name="i18n_columns" value="description" />
        </behavior>
    </table>
</database>
