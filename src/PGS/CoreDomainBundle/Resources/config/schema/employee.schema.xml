<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Employee" namespace="PGS\CoreDomainBundle\Model\Employee">
    <table name="employee" phpName="Employee">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="user_id" type="INTEGER" required="false"/>
        <column name="organization_id" type="INTEGER" required="true"/>
        <column name="school_id" type="INTEGER" required="true"/>
        <column name="employee_no" type="VARCHAR" size="20" required="true"/>
        <column name="gender" type="ENUM" valueSet="unknown, male, female" defaultValue="unknown"/>
        <column name="status" type="ENUM" valueSet="active, inactive, unknown" defaultValue="active"/>

        <!-- Relations -->
        <foreign-key foreignTable="fos_user" onDelete="SETNULL" onUpdate="CASCADE">
            <reference local="user_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="organization" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="organization_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="school" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_id" foreign="id"/>
        </foreign-key>
    </table>
</database>
