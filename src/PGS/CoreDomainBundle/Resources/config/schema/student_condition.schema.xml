<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.StudentCondition" namespace="PGS\CoreDomainBundle\Model\StudentCondition">
    <table name="student_condition" phpName="StudentCondition">
        <column name="school_health_id" type="INTEGER" required="true" primaryKey="true" />
        <column name="condition_id" type="integer" size="5" required="true" primaryKey="true"/>

        <foreign-key foreignTable="school_health" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_health_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="condition" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="condition_id" foreign="id"/>
        </foreign-key>
    </table>
</database>
