<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.SchoolTerm" namespace="PGS\CoreDomainBundle\Model\SchoolTerm">
    <table name="school_term" phpName="SchoolTerm">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="code" type="VARCHAR" size="5" required="true" />
        <column name="school_id" type="INTEGER" required="true" />
        <column name="school_year_id" type="INTEGER" required="true" />
        <column name="term_id" type="INTEGER" required="true" />
        <column name="date_start" type="DATE" />
        <column name="date_end" type="DATE" />
        <column name="active" type="boolean" defaultValue="false" />

        <!-- Relations -->
        <foreign-key foreignTable="school" onDelete="RESTRICT" onUpdate="CASCADE">
            <reference local="school_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="term" onDelete="RESTRICT" onUpdate="CASCADE">
            <reference local="term_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="school_year" onDelete="RESTRICT" onUpdate="CASCADE">
            <reference local="school_year_id" foreign="id"/>
        </foreign-key>

        <!-- Behavior-->
        <behavior name="sortable">
            <parameter name="use_scope" value="true"/>
            <parameter name="scope_column" value="school_id"/>
        </behavior>
    </table>
</database>
