<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.SchoolClassCourseStudentBehavior" namespace="PGS\CoreDomainBundle\Model\SchoolClassCourseStudentBehavior">
    <table name="school_class_course_student_behavior" phpName="SchoolClassCourseStudentBehavior">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="student_id" type="INTEGER" required="true"/>
        <column name="behavior_id" type="INTEGER" required="true"/>
        <column name="school_class_course_id" type="INTEGER" required="true"/>

        <!-- Relations -->
        <foreign-key foreignTable="student" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="student_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="behavior" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="behavior_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="school_class_course" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_class_course_id" foreign="id"/>
        </foreign-key>

    </table>
</database>
