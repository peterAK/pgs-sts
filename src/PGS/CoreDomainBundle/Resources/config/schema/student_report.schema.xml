<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.StudentReport" namespace="PGS\CoreDomainBundle\Model\StudentReport">
    <table name="student_report" phpName="StudentReport">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="school_class_id" type="INTEGER" required="true" />
        <column name="school_class_student_id" type="INTEGER" required="true" />
        <column name="score_id" type="INTEGER" required="true" />
        <column name="term1" type="INTEGER" required="false" />
        <column name="term2" type="INTEGER" required="false" />
        <column name="term3" type="INTEGER" required="false" />
        <column name="term4" type="INTEGER" required="false" />
        <column name="mid_report" type="INTEGER" required="false" />
        <column name="final_report" type="INTEGER" required="false" />


        <!-- Relations -->
        <foreign-key foreignTable="school_class" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_class_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="school_class_student" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_class_student_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="score" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="score_id" foreign="id"/>
        </foreign-key>
    </table>
</database>
