<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.SchoolGradeLevel" namespace="PGS\CoreDomainBundle\Model\SchoolGradeLevel">
    <table name="school_grade_level" phpName="SchoolGradeLevel">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="school_id" type="INTEGER" required="true"/>
        <column name="grade_level_id" type="INTEGER" required="true"/>

        <!-- Relations -->
        <foreign-key foreignTable="school" onDelete="RESTRICT" onUpdate="RESTRICT">
            <reference local="school_id" foreign="id"/>
        </foreign-key>

        <foreign-key foreignTable="grade_level" onDelete="RESTRICT" onUpdate="RESTRICT">
            <reference local="grade_level_id" foreign="id"/>
        </foreign-key>

        <!-- Behavior-->
        <behavior name="sortable" />
    </table>
</database>