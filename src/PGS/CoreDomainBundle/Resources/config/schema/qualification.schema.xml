<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Qualification" namespace="PGS\CoreDomainBundle\Model\Qualification">
    <table name="qualification" phpName="Qualification">
        <column name="id" phpName="Id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
        <column name="name" type="VARCHAR" size="50" required="true"/>
        <column name="description" type="LONGVARCHAR"/>
        <column name="school_id" type="INTEGER" required="false"/>
        <column name="course_id" type="INTEGER" required="false"/>
        <column name="status" type="ENUM" valueSet="active, inactive" defaultValue="active"/>

        <!-- Relations -->
        <foreign-key foreignTable="school" onDelete="SETNULL" onUpdate="CASCADE">
            <reference local="school_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="course" onDelete="SETNULL" onUpdate="CASCADE">
            <reference local="course_id" foreign="id"/>
        </foreign-key>

        <!-- Behavior -->
        <behavior name="i18n">
            <parameter name="i18n_columns" value="name, description" />
        </behavior>
        <behavior name="sortable">
            <parameter name="use_scope" value="true"/>
            <parameter name="scope_column" value="school_id"/>
        </behavior>
        <behavior name="timestampable" />
    </table>
</database>
