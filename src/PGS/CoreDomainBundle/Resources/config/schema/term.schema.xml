<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Term" namespace="PGS\CoreDomainBundle\Model\Term">
    <table name="term" phpName="Term">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="code" type="VARCHAR" size="5" required="true" />
        <column name="name" type="VARCHAR" size="100" required="true" />
        <column name="description" type="LONGVARCHAR" required="false" />

        <!-- Behavior-->
        <behavior name="sortable" />
        <behavior name="i18n">
            <parameter name="i18n_columns" value="code, name, description"/>
        </behavior>
    </table>
</database>
