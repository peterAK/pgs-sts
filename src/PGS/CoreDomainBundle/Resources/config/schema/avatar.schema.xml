<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Avatar" namespace="PGS\CoreDomainBundle\Model\Avatar">
    <table name="avatar" phpName="Avatar">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="name" type="VARCHAR" size="30" required="false"/>
        <column name="pic_file" type="LONGVARCHAR" required="true"/>
        <column name="type" type="ENUM" valueSet="normal, special, secret" defaultValue="normal" required="true"/>
        <column name="min_point" type="INTEGER" defaultValue="0" />

        <!-- Behavior-->
        <behavior name="i18n">
            <parameter name="i18n_columns" value="name"/>
        </behavior>
        <behavior name="sortable" />
    </table>


</database>
