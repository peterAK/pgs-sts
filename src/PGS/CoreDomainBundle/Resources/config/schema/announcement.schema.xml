<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Announcement" namespace="PGS\CoreDomainBundle\Model\Announcement">
    <table name="announcement" phpName="Announcement">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="subject" type="varchar" size="50" required="true" />
        <column name="description" type="LONGVARCHAR" required="true"/>
        <column name="posted_by" type="INTEGER" required="true" />
        <column name="recipient" type="varchar" size="20" required="true" />
        <column name="file" type="LONGVARCHAR" required="false"/>


        <!-- Relations -->
        <foreign-key foreignTable="fos_user" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="posted_by" foreign="id"/>
        </foreign-key>

    </table>
</database>