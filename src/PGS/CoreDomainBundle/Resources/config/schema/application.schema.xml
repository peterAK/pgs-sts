<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Application" namespace="PGS\CoreDomainBundle\Model\Application">
    <table name="application" phpName="Application">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true" />
        <column name="form_no" type="VARCHAR" size="20"/>
        <column name="student_nation_no" type="VARCHAR" size="20" required="false"/>
        <column name="prior_test_no" type="VARCHAR" size="20" required="false"/><!-- No Ujian Negara sebelumnya -->
        <column name="student_no" type="VARCHAR" size="20" required="false"/>
        <column name="first_name" phpName="FirstName" type="VARCHAR" size="50" required="true"/>
        <column name="last_name" phpName="LastName" type="VARCHAR" size="30" required="true"/>
        <column name="nick_name" phpName="NickName" type="VARCHAR" size="30" required="false"/>
        <column name="phone_student"  type="INTEGER" required="false"/>
        <column name="gender" type="ENUM" valueSet="unknown, male, female" defaultValue="unknown"/>
        <column name="place_of_birth" type="VARCHAR" size="50" />
        <column name="date_of_birth" type="DATE" />
        <column name="religion" type="ENUM" valueSet="other, islam, christian, catholic, hindu, buddhist, confucian" defaultValue="other"/>
        <column name="level_id" type="INTEGER" required="false"/>
        <column name="grade_id"  type="INTEGER" required="false" />

        <column name="ethnicity_id" type="INTEGER" required="true"/>
        <column name="child_no" type="SMALLINT" required="true" defaultValue="0"/>
        <column name="child_total" type="SMALLINT" required="true" defaultValue="0"/>
        <column name="child_status" type="ENUM" valueSet="biological, step, adopted, other" defaultValue="biological"/>
        <column name="picture" type="VARCHAR" size="100" required="false"/>
        <column name="birth_certificate" type="VARCHAR" size="100" required="false"/>
        <column name="family_card" type="VARCHAR" size="100" required="false"/>
        <column name="graduation_certificate" type="VARCHAR" size="100" required="false"/>
        <column name="address" phpName="Address" type="VARCHAR" size="100" required="false"/>
        <column name="city" phpName="City" type="VARCHAR" size="100" required="false"/>
        <column name="state_id" phpName="StateId" type="INTEGER" required="true"/>
        <column name="zip" phpName="Zip" type="VARCHAR" size="10" required="false"/>
        <column name="country_id" phpName="CountryId" type="INTEGER" required="true" defaultValue="105"/>
        <column name="school_id" type="INTEGER" required="false"/>
        <column name="school_year_id" type="INTEGER" required="false"/>
        <column name="status" type="ENUM" valueSet="partial, ready, processing, accepted, declined" defaultValue="partial"/>
        <column name="mailing_address" type="LONGVARCHAR" />
        <column name="note" type="LONGVARCHAR" />
        <column name="hobby" type="LONGVARCHAR" />
        <column name="entered_by" type="INTEGER" required="false"/>
        <column name="first_name_father" type="VARCHAR" size="30" required="false"/>
        <column name="last_name_father" type="VARCHAR" size="30" required="false"/>
        <column name="business_address_father"  type="VARCHAR" size="100" required="false"/>
        <column name="occupation_father" type="VARCHAR" size="30" required="false"/>
        <column name="phone_father" type="INTEGER"  required="false"/>
        <column name="email_father" type="LONGVARCHAR"  required="false"/>
        <column name="first_name_mother" type="VARCHAR" size="30" required="false"/>
        <column name="last_name_mother" type="VARCHAR" size="30" required="false"/>
        <column name="business_address_mother"  type="VARCHAR" size="100" required="false"/>
        <column name="occupation_mother" type="VARCHAR" size="30" required="false"/>
        <column name="phone_mother" type="INTEGER"  required="false"/>
        <column name="email_mother" type="LONGVARCHAR"  required="false"/>
        <column name="first_name_legal_guardian" type="VARCHAR" size="30" required="false"/>
        <column name="last_name_legal_guardian" type="VARCHAR" size="30" required="false"/>
        <column name="occupation_legal_guardian" type="VARCHAR" size="30" required="false"/>
        <column name="phone_legal_guardian" type="INTEGER"  required="false"/>
        <column name="email_legal_guardian" type="LONGVARCHAR"  required="false"/>

        <!-- Relations -->
        <foreign-key foreignTable="fos_user" onDelete="SETNULL" onUpdate="CASCADE">
            <reference local="entered_by" foreign="id" />
        </foreign-key>
        <foreign-key foreignTable="school" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="school_year" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="school_year_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="ethnicity" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="ethnicity_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="grade" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="grade_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="level" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="level_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="state" onDelete="RESTRICT" onUpdate="RESTRICT">
            <reference local="state_id" foreign="id"/>
        </foreign-key>
        <foreign-key foreignTable="country" onDelete="RESTRICT" onUpdate="RESTRICT">
            <reference local="country_id" foreign="id"/>
        </foreign-key>

    </table>
</database>

