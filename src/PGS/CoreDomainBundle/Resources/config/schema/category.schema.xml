<?xml version="1.0" encoding="UTF-8"?>
<database name="default" package="src.PGS.CoreDomainBundle.Model.Category" namespace="PGS\CoreDomainBundle\Model\Category">
    <table name="category" phpName="Category">
        <column name="id" phpName="Id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
        <column name="name" type="VARCHAR" size="50" required="true"/>
        <column name="description" type="LONGVARCHAR"/>
        <column name="author_id" type="INTEGER" required="true"/>
        <column name="status" type="VARCHAR" size="10"/>  <!-- Publish, Unpublished -->

        <!-- Relations -->
        <foreign-key foreignTable="fos_user" onDelete="CASCADE" onUpdate="CASCADE">
            <reference local="author_id" foreign="id"/>
        </foreign-key>

        <!-- Behavior -->
        <behavior name="i18n">
            <parameter name="i18n_columns" value="name, description" />
        </behavior>
        <behavior name="timestampable" />
        <behavior name="nested_set" />
    </table>
</database>
